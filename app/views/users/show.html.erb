<p style="color: green"><%= notice %></p>
<%= render @user %>
<div class="row g-3">
  <div class="col-md-4">
    <%if @user.avatar.attached?%>
      <%= image_tag @user.avatar, alt: 'avatar' %>
    <%else%>
      <p>**No avatar yet**</p>
    <%end%>
  </div>
  <div class="row">
    <div class="col-md-4">
      <strong>Upload avatar</strong>
      <%= form_tag user_avatars_path(@user), multipart: true do %>
        <%= file_field_tag :avatar, class: "btn btn-primary"%>
        <%= submit_tag "mettre Ã  jour", class: "btn btn-outline-secondary btn-sm" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <hr class="hr" />
    <div class="row">
      <div class="col-md-4">
        <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-outline-warning btn-sm" %>
        </div>
        <div class="col-md-4">
        <%= link_to "Back to users", users_path, class: "btn btn-outline-warning btn-sm" %>
        </div>
        <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-outline-danger"%>
      </div>
    </div>
  </div>
</div>
