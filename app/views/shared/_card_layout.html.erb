<div class="col">
  <div class="card mb-3 shadow-sm d-flex justify-content-center">
    <h3 class="card-header"><%=item.name%></h3>
    <%if item.catimage.attached?%>
      <%= image_tag item.catimage, alt: 'cat', class: "d-flex justify-content-center" %>
    <%else%>
      <p class= "d-flex justify-content-center"><%= image_tag item.image_url%></p>
    <%end%>
    <div class="card-body">
      <p class="card-text"><%= item.description%></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item d-flex justify-content-center">
        <h3><%= item.price%>â‚¬ </h3>
      </li>
    </ul>
    <div class="card-body d-flex justify-content-center">
      <%= link_to "Show this item", item_path(item), class: "btn btn-primary d-flex justify-content-center" %>
      <%= link_to "Add to cart", item_path(item), class: "btn btn-secondary d-flex justify-content-center" %>
    </div>
    <div class="d-flex justify-content-center p-2">
      <%= link_to "Back to items", items_path, class: "btn btn-primary" %>
    </div>
    <br>
  </div>
</div>
