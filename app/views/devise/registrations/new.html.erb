<div class="container container-table w-25">
  <div class="row vertical-center-row">
    <div class="text-center col-md-12">
      <br>
      <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
          <%= f.label :avatar, class: "form-label mt-4" %><br />
          <%= f.file_field :avatar, class: "form-control", placeholder: "Choose a avatar" %>
        </div>
         <div class="field">
          <%= f.label :first_name, class: "form-label mt-4" %><br />
          <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name" %>
        </div>
         <div class="field">
          <%= f.label :last_name, class: "form-label mt-4" %><br />
          <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name" %>
        </div>
         <div class="field">
          <%= f.label :street, class: "form-label mt-4" %><br />
          <%= f.text_field :street, class: "form-control", placeholder: "Enter your street" %>
        </div>
        <div class="field">
          <%= f.label :email, class: "form-label mt-4" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email" %>
        </div>
        <div class="field">
          <%= f.label :password, class: "form-label mt-4" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter new password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, class: "form-label mt-4" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm new password" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
